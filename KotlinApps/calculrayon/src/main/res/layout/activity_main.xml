<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/zoneNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text="Entrez le rayon r"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="339dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/boutonAire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aire du disque" />

        <Button
            android:id="@+id/boutonSurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surface du disque" />

        <Button
            android:id="@+id/boutonVolume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volume de la boule" />

        <TextView
            android:id="@+id/zoneReponse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RÃ©ponse..."
            android:textSize="34sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>